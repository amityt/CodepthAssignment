<%- include("../partials/header") %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>
				Welcome To International News Section!!
			</h1>
			<p>
				Stay connected to the latest happenings in the technological fields!
			</p>
		</div>
	</header>
	<div class="row text-center" style="display:flex ; flex-wrap: wrap;">	
<% news.forEach( function(news){ %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
		<img src="<%=news.image%>" style="border: 2px solid black; border-radius:10px; width:auto; height:200px" >	
		<div class="caption">
			<h3><%=news.name%></h3>
		</div>
			<a href="/main/news/international/<%=news._id%>" class="btn btn-primary">More info!</a>
		</div>
</div>

<%});%>
</div>
<%- include("../partials/footer") %>